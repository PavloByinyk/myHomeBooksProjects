<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.turtledev.fragments.ButtonFragment"
        android:id="@+id/button_fragment"
        android:layout_height="wrap_content"
        android:layout_width="310dp"
        tools:layout="@layout/buttom_layout"
        android:layout_alignParentTop="true" />

    <fragment
        android:name="com.turtledev.fragments.ImageFragment"
        android:id="@+id/image_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/image_layout"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/button_fragment"
        android:layout_toEndOf="@+id/button_fragment"
        android:layout_marginStart="53dp" />

</RelativeLayout>